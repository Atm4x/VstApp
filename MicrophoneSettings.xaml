<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Teston.MicrophoneSettings"
        Title="Настройки микрофона"
        Width="400" Height="300"
        Background="#0F1419">

    <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="Выберите микрофон" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold"/>
        <ListBox x:Name="lstDevices" Background="#1E2328" BorderBrush="#3C4043" BorderThickness="1" CornerRadius="8"/>
        <Button Content="OK" Classes="primary" Click="Ok_Click" HorizontalAlignment="Stretch"/>
    </StackPanel>
</Window>